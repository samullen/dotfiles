[user]
	name = Samuel Mullen
	email = samuel@samuelmullen.com
	signingkey = 0D0C7A5F
[alias]
# 	lol = log --graph --decorate --pretty=format:'%h %ci (%an) %s%d'
	ctags = !~/.git_template/hooks/ctags
	d = difftool
  ds = !git -c delta.side-by-side=true diff
	g = grep --break --heading --line-number
  dump = cat-file -p
  files = !git diff --name-only $(git merge-base HEAD \"master\")
  # Stats on files which have changed since master
  stat = !git diff --stat $(git merge-base HEAD \"master\")
  # List last 10 branches worked on
  last = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  lol = log --graph --date=local --pretty=format:'%C(yellow)%h%Creset %cd %C(yellow)(%Creset%C(green)%an%Creset%C(yellow))%Creset %s%C(cyan)%d%Creset'
  recap = log --all --oneline --no-merges --author=samuel@samuelmullen.com
  s = status -sb
  devstats = shortlog -sn --since='10 weeks' --until='2 weeks'
  type = cat-file -t
[color]
  ui = true
[color "diff"]
  whitespace = red reverse
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	editor = nvim
	excludesfile = ~/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = delta
[delta]
  navigate = true
  features = decorations
  side-by-side = false
  line-numbers = true
  minus-style = syntax" #660000"
  minus-emph-style = syntax bold "#901011"
  minus-empty-line-marker-style = normal "#660000"
  plus-style = syntax "#004400"
  plus-emph-style = syntax bold "#006000"
  plus-empty-line-marker-style = normal "#004400"
  line-numbers-minus-style = red # 88
  line-numbers-plus-style = green #28
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-style = raw
  commit-decoration-style = yellow none box
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = grey box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax
[diff]
	tool = vimdiff
	compactionHeuristic = true
  colormoved = default
[difftool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[grep]
	extendRegexp = true
	lineNumber = true
[gpg]
	program = gpg
[init]
	templatedir = ~/.git_template
  defaultbranch = master
[interactive]
  diffFilter = delta --color-only --features=interactive
[merge]
	tool = vimdiff
  conflictstyle = zdiff3
[push]
	default = current
[remote "origin"]
	prune = true
[rebase]
	autoStash = true
